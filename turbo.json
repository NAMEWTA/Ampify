{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["out/**", "dist/**"],
      "inputs": ["src/**", "tsconfig.json", "vite.config.ts"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputs": []
    }
  }
}
