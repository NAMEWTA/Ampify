{
  "name": "ampify",
  "displayName": "Ampify",
  "description": "Ampify: A practical, multi-feature VS Code extension combining path+line copying and a multi-instance launcher (多功能实用扩展，集文件路径行号复制与多实例启动器于一体，持续发展中)。",
  "version": "1.2.0",
  "publisher": "NAMEWTA",
  "repository": {
    "type": "git",
    "url": "https://github.com/NAMEWTA/Ampify"
  },
  "icon": "icon.png",
  "extensionKind": [
    "workspace"
  ],
  "engines": {
    "vscode": "^1.108.0"
  },
  "keywords": [
    "copy",
    "file name",
    "line number",
    "launcher",
    "multi-account"
  ],
  "categories": [
    "Other",
    "AI"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ampify-launcher",
          "title": "Multi Launcher",
          "icon": "$(account)"
        }
      ]
    },
    "views": {
      "ampify-launcher": [
        {
          "id": "ampify-launcher-instances",
          "name": "Instances"
        }
      ]
    },
    "commands": [
      {
        "command": "ampify.copy-relative-path-line",
        "title": "Copy Relative Path & Line (复制相对路径与行号)"
      },
      {
        "command": "ampify.copy-absolute-path-line",
        "title": "Copy Absolute Path & Line (复制绝对路径与行号)"
      },
      {
        "command": "ampify.launcher.add",
        "title": "Add Instance",
        "icon": "$(add)"
      },
      {
        "command": "ampify.launcher.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ampify.launcher.editConfig",
        "title": "Edit Config",
        "icon": "$(settings-gear)"
      },
      {
        "command": "ampify.launcher.launch",
        "title": "Launch Instance",
        "icon": "$(rocket)"
      },
      {
        "command": "ampify.launcher.delete",
        "title": "Delete Instance",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "ampify.copy-relative-path-line",
        "key": "ctrl+alt+c",
        "mac": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "ampify.copy-absolute-path-line",
        "key": "ctrl+alt+v",
        "mac": "ctrl+alt+v",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ampify.copy-relative-path-line"
        },
        {
          "command": "ampify.copy-absolute-path-line"
        }
      ],
      "view/title": [
        {
          "command": "ampify.launcher.add",
          "when": "view == ampify-launcher-instances",
          "group": "navigation"
        },
        {
          "command": "ampify.launcher.refresh",
          "when": "view == ampify-launcher-instances",
          "group": "navigation"
        },
        {
          "command": "ampify.launcher.editConfig",
          "when": "view == ampify-launcher-instances",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ampify.launcher.launch",
          "when": "view == ampify-launcher-instances",
          "group": "inline"
        },
        {
          "command": "ampify.launcher.delete",
          "when": "view == ampify-launcher-instances",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Ampify",
      "properties": {
        "ampify.language": {
          "type": "string",
          "enum": [
            "en",
            "zh-cn"
          ],
          "default": "zh-cn",
          "description": "Language for Ampify extension messages (Ampify 扩展的语言设置)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.0",
    "@types/node": "24.x",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.4.0",
    "typescript": "^5.6.3"
  }
}
