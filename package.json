{
  "name": "ampify",
  "displayName": "Ampify",
  "description": "Ampify：复制文件路径与行号的 VS Code 扩展。",
  "version": "1.0.0",
  "publisher": "NAMEWTA",
  "repository": {
    "type": "git",
    "url": "https://github.com/NAMEWTA/Ampify"
  },
  "icon": "icon.png",
  "extensionKind": [
    "workspace"
  ],
  "engines": {
    "vscode": "^1.108.0"
  },
  "keywords": [
    "copy",
    "file name",
    "line number",
    "function name",
    "clipboard"
  ],
  "categories": [
    "Other",
    "AI",
    "Enhancement",
    "Coding"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ampify.copy-relative-path-line",
        "title": "Copy Relative Path & Line (复制相对路径与行号)"
      },
      {
        "command": "ampify.copy-absolute-path-line",
        "title": "Copy Absolute Path & Line (复制绝对路径与行号)"
      }
    ],
    "keybindings": [
      {
        "command": "ampify.copy-relative-path-line",
        "key": "ctrl+alt+c",
        "mac": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "ampify.copy-absolute-path-line",
        "key": "ctrl+alt+v",
        "mac": "ctrl+alt+v",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ampify.copy-relative-path-line"
        },
        {
          "command": "ampify.copy-absolute-path-line"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.0",
    "@types/node": "24.x",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.4.0",
    "typescript": "^5.6.3"
  }
}
