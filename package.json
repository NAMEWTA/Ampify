{
  "name": "ampify",
  "displayName": "Ampify",
  "description": "Ampify: A practical, multi-feature VS Code extension combining path+line copying and a multi-instance launcher (多功能实用扩展，集文件路径行号复制与多实例启动器于一体，持续发展中)。",
  "version": "1.5.0",
  "publisher": "NAMEWTA",
  "repository": {
    "type": "git",
    "url": "https://github.com/NAMEWTA/Ampify"
  },
  "icon": "icon.png",
  "extensionKind": [
    "workspace"
  ],
  "engines": {
    "vscode": "^1.108.0"
  },
  "keywords": [
    "copy",
    "file name",
    "line number",
    "launcher",
    "multi-account",
    "skills",
    "ai-agent",
    "skill-manager"
  ],
  "categories": [
    "Other",
    "AI"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ampify",
          "title": "Ampify",
          "icon": "$(window)"
        }
      ]
    },
    "views": {
      "ampify": [
        {
          "id": "ampify-tab-bar",
          "name": "Ampify",
          "type": "webview"
        },
        {
          "id": "ampify-launcher-instances",
          "name": "Launcher",
          "when": "ampify.activeTab == 'launcher'"
        },
        {
          "id": "ampify-skills-tree",
          "name": "Skills",
          "when": "ampify.activeTab == 'skills'"
        },
        {
          "id": "ampify-commands-tree",
          "name": "Commands",
          "when": "ampify.activeTab == 'commands'"
        },
        {
          "id": "ampify-gitshare-tree",
          "name": "Git Sync",
          "when": "ampify.activeTab == 'gitshare'"
        }
      ]
    },
    "commands": [
      {
        "command": "ampify.copy-relative-path-line",
        "title": "Copy Relative Path & Line (复制相对路径与行号)"
      },
      {
        "command": "ampify.copy-absolute-path-line",
        "title": "Copy Absolute Path & Line (复制绝对路径与行号)"
      },
      {
        "command": "ampify.launcher.add",
        "title": "Add Instance",
        "icon": "$(add)"
      },
      {
        "command": "ampify.launcher.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ampify.launcher.editConfig",
        "title": "Edit Config",
        "icon": "$(settings-gear)"
      },
      {
        "command": "ampify.launcher.launch",
        "title": "Launch Instance",
        "icon": "$(rocket)"
      },
      {
        "command": "ampify.launcher.delete",
        "title": "Delete Instance",
        "icon": "$(trash)"
      },
      {
        "command": "ampify.skills.refresh",
        "title": "Refresh Skills",
        "icon": "$(refresh)"
      },
      {
        "command": "ampify.skills.search",
        "title": "Search Skills",
        "icon": "$(search)"
      },
      {
        "command": "ampify.skills.filterByTag",
        "title": "Filter by Tag",
        "icon": "$(filter)"
      },
      {
        "command": "ampify.skills.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "ampify.skills.create",
        "title": "Create New Skill",
        "icon": "$(add)"
      },
      {
        "command": "ampify.skills.import",
        "title": "Import Skill",
        "icon": "$(folder-library)"
      },
      {
        "command": "ampify.skills.apply",
        "title": "Apply to Project",
        "icon": "$(play)"
      },
      {
        "command": "ampify.skills.preview",
        "title": "Preview SKILL.md",
        "icon": "$(open-preview)"
      },
      {
        "command": "ampify.skills.openFolder",
        "title": "Open Skills Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "ampify.skills.delete",
        "title": "Delete Skill",
        "icon": "$(trash)"
      },
      {
        "command": "ampify.skills.remove",
        "title": "Remove from Project",
        "icon": "$(close)"
      },
      {
        "command": "ampify.skills.openFile",
        "title": "Open Skill File",
        "icon": "$(file-text)"
      },
      {
        "command": "ampify.skills.syncToAgentMd",
        "title": "Sync AGENT.md",
        "icon": "$(book)"
      },
      {
        "command": "ampify.commands.refresh",
        "title": "Refresh Commands",
        "icon": "$(refresh)"
      },
      {
        "command": "ampify.commands.search",
        "title": "Search Commands",
        "icon": "$(search)"
      },
      {
        "command": "ampify.commands.filterByTag",
        "title": "Filter by Tag",
        "icon": "$(filter)"
      },
      {
        "command": "ampify.commands.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "ampify.commands.create",
        "title": "Create New Command",
        "icon": "$(add)"
      },
      {
        "command": "ampify.commands.import",
        "title": "Import Command",
        "icon": "$(folder-library)"
      },
      {
        "command": "ampify.commands.apply",
        "title": "Apply to Project",
        "icon": "$(play)"
      },
      {
        "command": "ampify.commands.preview",
        "title": "Preview Command",
        "icon": "$(open-preview)"
      },
      {
        "command": "ampify.commands.openFolder",
        "title": "Open Commands Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "ampify.commands.delete",
        "title": "Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "ampify.commands.remove",
        "title": "Remove from Project",
        "icon": "$(close)"
      },
      {
        "command": "ampify.gitShare.refresh",
        "title": "Refresh Git Share",
        "icon": "$(refresh)"
      },
      {
        "command": "ampify.gitShare.sync",
        "title": "Sync Git",
        "icon": "$(sync)"
      },
      {
        "command": "ampify.gitShare.showDiff",
        "title": "Show Changes",
        "icon": "$(diff)"
      },
      {
        "command": "ampify.gitShare.editConfig",
        "title": "Edit Git Config",
        "icon": "$(gear)"
      },
      {
        "command": "ampify.gitShare.openConfigWizard",
        "title": "Configure Git",
        "icon": "$(settings-gear)"
      },
      {
        "command": "ampify.gitShare.openFolder",
        "title": "Open Git Share Folder",
        "icon": "$(folder-opened)"
      }
    ],
    "keybindings": [
      {
        "command": "ampify.copy-relative-path-line",
        "key": "ctrl+alt+c",
        "mac": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "ampify.copy-absolute-path-line",
        "key": "ctrl+alt+v",
        "mac": "ctrl+alt+v",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ampify.copy-relative-path-line"
        },
        {
          "command": "ampify.copy-absolute-path-line"
        }
      ],
      "view/title": [
        {
          "command": "ampify.launcher.add",
          "when": "view == ampify-launcher-instances",
          "group": "navigation"
        },
        {
          "command": "ampify.launcher.refresh",
          "when": "view == ampify-launcher-instances",
          "group": "navigation"
        },
        {
          "command": "ampify.launcher.editConfig",
          "when": "view == ampify-launcher-instances",
          "group": "navigation"
        },
        {
          "command": "ampify.skills.search",
          "when": "view == ampify-skills-tree",
          "group": "navigation@1"
        },
        {
          "command": "ampify.skills.filterByTag",
          "when": "view == ampify-skills-tree",
          "group": "navigation@2"
        },
        {
          "command": "ampify.skills.refresh",
          "when": "view == ampify-skills-tree",
          "group": "navigation@4"
        },
        {
          "command": "ampify.skills.create",
          "when": "view == ampify-skills-tree",
          "group": "navigation@5"
        },
        {
          "command": "ampify.skills.openFolder",
          "when": "view == ampify-skills-tree",
          "group": "navigation@6"
        },
        {
          "command": "ampify.skills.syncToAgentMd",
          "when": "view == ampify-skills-tree",
          "group": "navigation@7"
        },
        {
          "command": "ampify.commands.search",
          "when": "view == ampify-commands-tree",
          "group": "navigation@1"
        },
        {
          "command": "ampify.commands.filterByTag",
          "when": "view == ampify-commands-tree",
          "group": "navigation@2"
        },
        {
          "command": "ampify.commands.refresh",
          "when": "view == ampify-commands-tree",
          "group": "navigation@3"
        },
        {
          "command": "ampify.commands.create",
          "when": "view == ampify-commands-tree",
          "group": "navigation@4"
        },
        {
          "command": "ampify.commands.import",
          "when": "view == ampify-commands-tree",
          "group": "navigation@5"
        },
        {
          "command": "ampify.commands.openFolder",
          "when": "view == ampify-commands-tree",
          "group": "navigation@6"
        },
        {
          "command": "ampify.gitShare.sync",
          "when": "view == ampify-gitshare-tree",
          "group": "navigation@1"
        },
        {
          "command": "ampify.gitShare.showDiff",
          "when": "view == ampify-gitshare-tree",
          "group": "navigation@2"
        },
        {
          "command": "ampify.gitShare.refresh",
          "when": "view == ampify-gitshare-tree",
          "group": "navigation@3"
        },
        {
          "command": "ampify.gitShare.openFolder",
          "when": "view == ampify-gitshare-tree",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "ampify.launcher.launch",
          "when": "view == ampify-launcher-instances",
          "group": "inline"
        },
        {
          "command": "ampify.launcher.delete",
          "when": "view == ampify-launcher-instances",
          "group": "inline"
        },
        {
          "command": "ampify.skills.apply",
          "when": "view == ampify-skills-tree && viewItem == skillItem",
          "group": "inline@1"
        },
        {
          "command": "ampify.skills.preview",
          "when": "view == ampify-skills-tree && viewItem == skillItem",
          "group": "inline@2"
        },
        {
          "command": "ampify.skills.openFolder",
          "when": "view == ampify-skills-tree && viewItem == skillItem",
          "group": "1_edit@1"
        },
        {
          "command": "ampify.skills.delete",
          "when": "view == ampify-skills-tree && viewItem == skillItem",
          "group": "2_delete"
        },
        {
          "command": "ampify.commands.apply",
          "when": "view == ampify-commands-tree && viewItem == commandItem",
          "group": "inline@1"
        },
        {
          "command": "ampify.commands.preview",
          "when": "view == ampify-commands-tree && viewItem == commandItem",
          "group": "inline@2"
        },
        {
          "command": "ampify.commands.remove",
          "when": "view == ampify-commands-tree && viewItem == commandItem",
          "group": "1_edit@1"
        },
        {
          "command": "ampify.commands.delete",
          "when": "view == ampify-commands-tree && viewItem == commandItem",
          "group": "2_delete"
        }
      ]
    },
    "configuration": {
      "title": "Ampify",
      "properties": {
        "ampify.language": {
          "type": "string",
          "enum": [
            "en",
            "zh-cn"
          ],
          "default": "zh-cn",
          "description": "Language for Ampify extension messages (Ampify 扩展的语言设置)"
        },
        "ampify.skills.injectTarget": {
          "type": "string",
          "default": ".claude/skills/",
          "description": "Default target directory to inject skills into projects (默认 Skill 注入目标目录)"
        },
        "ampify.commands.injectTarget": {
          "type": "string",
          "default": ".claude/commands/",
          "description": "Default target directory to inject commands into projects (默认 Command 注入目标目录)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "simple-git": "^3.22.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.0",
    "@types/node": "24.x",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.4.0",
    "typescript": "^5.6.3"
  }
}
